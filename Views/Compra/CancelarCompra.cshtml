@using Dominio

@{
    ViewData["Title"] = "Cancelar Compra";
}

<h1>Cancelar Compra</h1>

@if (ViewBag.Mensaje != null)//Esto es el mensaje de confirmacion o error con color, el mensaje se escribe en el controlador
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Mensaje
    </div>
}

<form id="formulario" action="/Compra/CancelarCompra" method="post">


    <div class="mb-3">
        <label for="id" class="form-label">Id</label>
        <input type="number" class="form-control" id="id" name="id" value="@ViewBag.Id" readonly>
    </div>

    <div class="mb-3">
            <label for="fecha" class="form-label">Fecha Actividad</label>
            <input type="datetime" class="form-control" id="fecha" name="fecha" value="@ViewBag.Fecha" readonly>
        </div>

    <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="@ViewBag.Nombre" readonly>
        </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Cancelar</button>
    </div>

</form>