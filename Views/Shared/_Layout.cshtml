@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dirección Nacional de Cultura</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand">D.N.C</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("rol") == null)
                        {
                            <li class="nav-item">
                            <a class="nav-link text-dark" href="/Usuario/Login">Iniciar Sesión</a>
                            </li>

                            <li class="nav-item">
                            <a class="nav-link text-dark" href="/Actividad/ListaActividadUsuarioAnonimo">Actividades</a>
                            </li>
                        }
                        else 
                        {
                            <li class="nav-item">
                            <a class="nav-link text-dark" href="/Usuario/logout">Cerrar sesión</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") == "Cliente")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Actividad/ListaActividadUsuarioCliente">Actividades</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Compra/DatosDeCompras">Historial de compras</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") == "Operador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Actividad/ListaActividadesPorLugar">Actividades por lugar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Actividad/ListaActividadesDeCategoriaPorFecha">Actividades por categoria</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Compra/ComprasPorFecha">Compras por fecha</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Usuario/ListaClientes">Lista de clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Compra/ComprasMayorValor">Compra mayor valor</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Dirección Nacional de Cultura - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
